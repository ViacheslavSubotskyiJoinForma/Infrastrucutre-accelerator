# GitHub Actions CI/CD for {{ project_name }} Infrastructure
# Auto-generated by Infrastructure Accelerator

name: Terraform CI/CD

on:
  pull_request:
    branches: [main, master]
    paths:
{% for component in components %}
      - 'infra/{{ component }}/**'
{% endfor %}
      - 'infra/config/**'
  push:
    branches: [main, master]
    paths:
{% for component in components %}
      - 'infra/{{ component }}/**'
{% endfor %}
      - 'infra/config/**'
  workflow_dispatch:
    inputs:
      environment:
        description: 'Environment to deploy'
        required: true
        type: choice
        options:
{% for env in environments %}
          - {{ env }}
{% endfor %}
      component:
        description: 'Component to deploy'
        required: true
        type: choice
        options:
{% for component in components %}
          - {{ component }}
{% endfor %}
      action:
        description: 'Terraform action'
        required: true
        type: choice
        default: 'plan'
        options:
          - plan
          - apply

# Prevent concurrent runs
concurrency:
  group: {% raw %}terraform-${{ github.workflow }}-${{ github.ref }}{% endraw %}

  cancel-in-progress: false

# Minimal permissions
permissions:
  contents: read
  pull-requests: write
  issues: write

env:
  TERRAFORM_VERSION: '1.10.3'
  AWS_REGION: {% raw %}${{ secrets.AWS_REGION }}{% endraw %}


jobs:
{% for component in components %}
  validate-{{ component }}:
    name: Validate {{ component }}
    runs-on: ubuntu-latest
    if: {% raw %}github.event_name == 'pull_request' || github.event_name == 'push'{% endraw %}

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Terraform
        uses: hashicorp/setup-terraform@v3
        with:
          terraform_version: {% raw %}${{ env.TERRAFORM_VERSION }}{% endraw %}

      - name: Terraform Format Check
        working-directory: infra/{{ component }}
        run: terraform fmt -check -recursive

      - name: Terraform Init
        working-directory: infra/{{ component }}
        run: terraform init -backend=false

      - name: Terraform Validate
        working-directory: infra/{{ component }}
        run: terraform validate

{% for env in environments %}

  plan-{{ component }}-{{ env }}:
    name: Plan {{ component }} ({{ env }})
    runs-on: ubuntu-latest
    needs: validate-{{ component }}
    if: {% raw %}github.event_name == 'pull_request' || (github.event_name == 'workflow_dispatch' && github.event.inputs.component == '{% endraw %}{{ component }}{% raw %}' && github.event.inputs.environment == '{% endraw %}{{ env }}{% raw %}'){% endraw %}

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Configure AWS Credentials
        uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: {% raw %}${{ secrets.AWS_ACCESS_KEY_ID }}{% endraw %}

          aws-secret-access-key: {% raw %}${{ secrets.AWS_SECRET_ACCESS_KEY }}{% endraw %}

          aws-region: {% raw %}${{ env.AWS_REGION }}{% endraw %}


      - name: Setup Terraform
        uses: hashicorp/setup-terraform@v3
        with:
          terraform_version: {% raw %}${{ env.TERRAFORM_VERSION }}{% endraw %}

      - name: Terraform Init
        working-directory: infra/{{ component }}
        run: terraform init

      - name: Terraform Plan
        working-directory: infra/{{ component }}
        run: |
          terraform plan \
            -var-file=../config/{{ env }}.tfvars \
            -out=tfplan-{{ env }} \
            -no-color
        continue-on-error: true
        id: plan

      - name: Comment Plan on PR
        if: {% raw %}github.event_name == 'pull_request'{% endraw %}

        uses: actions/github-script@v7
        with:
          script: |
            const output = `### Terraform Plan: {{ component }} ({{ env }})

            #### Status: {% raw %}${{ steps.plan.outcome }}{% endraw %}
            <details>
            <summary>Show Plan</summary>

            \`\`\`terraform
{% raw %}            ${{ steps.plan.outputs.stdout }}{% endraw %}
            \`\`\`

            </details>

            *Pushed by: @{% raw %}${{ github.actor }}{% endraw %}, Action: \`{% raw %}${{ github.event.name }}{% endraw %}\`*`;

            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: output
            })

      - name: Upload Plan
        uses: actions/upload-artifact@v4
        with:
          name: tfplan-{{ component }}-{{ env }}
          path: infra/{{ component }}/tfplan-{{ env }}
          retention-days: 5

  apply-{{ component }}-{{ env }}:
    name: Apply {{ component }} ({{ env }})
    runs-on: ubuntu-latest
    needs: plan-{{ component }}-{{ env }}
    if: |
{% raw %}      (github.event_name == 'push' && github.ref == 'refs/heads/main') ||
      (github.event_name == 'workflow_dispatch' &&
       github.event.inputs.component == '{% endraw %}{{ component }}{% raw %}' &&
       github.event.inputs.environment == '{% endraw %}{{ env }}{% raw %}' &&
       github.event.inputs.action == 'apply'){% endraw %}
    environment: {{ env }}

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Configure AWS Credentials
        uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: {% raw %}${{ secrets.AWS_ACCESS_KEY_ID }}{% endraw %}

          aws-secret-access-key: {% raw %}${{ secrets.AWS_SECRET_ACCESS_KEY }}{% endraw %}

          aws-region: {% raw %}${{ env.AWS_REGION }}{% endraw %}


      - name: Setup Terraform
        uses: hashicorp/setup-terraform@v3
        with:
          terraform_version: {% raw %}${{ env.TERRAFORM_VERSION }}{% endraw %}

      - name: Download Plan
        uses: actions/download-artifact@v4
        with:
          name: tfplan-{{ component }}-{{ env }}
          path: infra/{{ component }}

      - name: Terraform Init
        working-directory: infra/{{ component }}
        run: terraform init

      - name: Terraform Apply
        working-directory: infra/{{ component }}
        run: terraform apply -auto-approve tfplan-{{ env }}
{% endfor %}
{% endfor %}
